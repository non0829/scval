<%= stylesheet_link_tag 'registration', :media => "all" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="form">
    <h2>Forgot password?</h2>
    <div class="form_box">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="actions">
      <p><%= f.submit "Send Mail" %></p>
      <p><%= link_to "Login", new_session_path(resource_name) %></p>
      <p><%= link_to "Registration", new_registration_path(resource_name) %></p>
    </div>
  </div>
<% end %>

