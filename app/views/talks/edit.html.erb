<%= stylesheet_link_tag 'registration', :media => "all" %>

<%= form_for @talk do |t| %>
    <div class="form">
        <h2>トーク編集</h2>
        <div class="form_box">
            <div class="field">
                <%= t.label :名前 %>
                <%= t.text_field :name %>
            </div>

            <div class="field">
                <%= t.label :内容 %>
                <%= t.text_field :content %>
            </div>
        </div>
        <div class="actions">
            <p><%= t.submit "投稿する" %></p>
        </div>
    </div>
<% end %>