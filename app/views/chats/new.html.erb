<%= stylesheet_link_tag 'registration', :media => "all" %>

<%= form_for @chat do |c| %>
    <div class="form">
        <h2>先生からのコメント欄</h2>
        <div class="form_box">
            <div class="field">
                <%= c.label :名前 %>
                <%= c.text_field :name %>
            </div>

            <div class="field">
                <%= c.label :タイトル %>
                <%= c.text_field :title %>
            </div>

            <div class="field">
                <%= c.label :内容 %>
                <%= c.text_field :content %>
            </div>
        </div>
        <div class="actions">
            <p><%= c.submit "投稿する" %></p>
        </div>
    </div>
<% end %>