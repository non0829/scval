<%= stylesheet_link_tag 'registration', :media => "all" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form">
    <h2>Player Registration</h2> 
    <div class="form_box">
      <div class="field">
        <%= f.label :Name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :Address %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :GroupCode %>
        <%= f.number_field :group_code, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :Team %>
        <%= f.select :team, [1, 2, 3, 4, 5] %>
      </div>

      <div class="field">
        <%= f.label :Password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :PasswordAgain %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions">
      <p><%= f.submit "Registration" %></p>
      <p><%= render "students/shared/links" %></p>
    </div>
  </div>
<% end %>
